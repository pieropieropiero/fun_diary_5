<!DOCTYPE html>
<html>
  <head>
    <title>FunDiary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
          <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">FunDiary</a></h1>
        
        <% if user_signed_in? %>
          <div class="user_nav grid-6">
             <%= link_to "投稿", new_diary_path, class: "post" %>
             <%= link_to "report", report_path, class: "post" %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>           
          </div>

        <% else %>
          <div class="grid-6">
            <%= link_to "Login", new_user_session_path, class: "post" %>
            <%= link_to "sign up", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
        
        </div>
      </div>
    </header>
    <%= yield %>
    
  </body>
</html>