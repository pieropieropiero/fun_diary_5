 <%# 投稿の概要 %>
<div class="item-show">
  <div class="item-box">

    <div class="item-img-content">
      <%= image_tag @diary.image.variant(resize:'500x500') ,class:"item-box-img" %>
      
    </div>
 

    <div class="item-explain-box">
      <span></span>
    </div>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">得点</th>
          <td class="detail-value"><%= @diary.score %></td>
        </tr>
        <tr>
          <th class="detail-item">カテゴリー</th>
          <td class="detail-value"><%= @diary.category.name %></td>
        </tr>
        <tr>
          <th class="detail-item">内容</th>
          <td class="detail-value"><%= @diary.text %></td>
        </tr>
        
      </tbody>
    </table>
   
  </div>
  
  <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
        <a href="/">戻る</a></h1>
        </li>
        <li>
          <%= link_to '編集', edit_diary_path(@diary.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', diary_path(@diary.id), method: :delete %>
        </li>
      </ul>
    </div>